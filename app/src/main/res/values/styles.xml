<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AboutText" parent="TextAppearance.AppCompat.Medium">
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/insektionen_light</item>
		<item name="colorPrimaryDark">@color/insektionen</item>
		<item name="colorAccent">@color/insektionen_light</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="SongCategory" parent="TextAppearance.AppCompat.Small">
		<item name="android:textColor">@color/darkgray</item>
		<item name="android:textStyle">italic</item>
	</style>

	<style name="SongHeading" parent="TextAppearance.AppCompat.Large">
		<item name="android:layout_marginTop">3dp</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">28sp</item>
	</style>

	<style name="SongInfo" parent="TextAppearance.AppCompat.Small">
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:textColor">@android:color/primary_text_light</item>
	</style>

	<style name="SongListItemPrimary">
		<item name="android:ellipsize">end</item>
		<item name="android:singleLine">true</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">20sp</item>
	</style>

	<style name="SongListItemSecondary">
		<item name="android:ellipsize">end</item>
		<item name="android:singleLine">true</item>
		<item name="android:textColor">@color/darkgray</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">italic</item>l
	</style>
</resources>
